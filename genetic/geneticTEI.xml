        <fileDesc>
            <titleStmt>
                <title>TEI Extension for Genetic Editions</title>
                <author>Moritz Wissenbach</author>
            </titleStmt>
            <publicationStmt>
                <p>for internal use</p>
            </publicationStmt>
            <notesStmt>
                <note type="ns">http://www.tei-c.org/ns/1.0</note>
            </notesStmt>
