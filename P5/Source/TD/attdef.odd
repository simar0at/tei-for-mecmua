<elementSpec xmlns="http://www.tei-c.org/ns/1.0" module="tagdocs" xml:id="ATTDEF" usage="mwa" ident="attDef">
<equiv/>
<gloss>attribute definition</gloss>
<desc>contains the definition of a single attribute.</desc>
  <classes>
    <memberOf key="tei.identifiable"/>
  </classes>
  <content>
  <rng:group xmlns:rng="http://relaxng.org/ns/structure/1.0">
       <rng:ref name="macro.glossSeq"/>
       <rng:optional><rng:ref name="datatype"/></rng:optional>
       <rng:optional><rng:ref name="defaultVal"/></rng:optional>
       <rng:optional>
           <rng:choice>
             <rng:ref name="valList"/>
             <rng:ref name="valDesc"/>
           </rng:choice>
       </rng:optional>
        <rng:optional><rng:ref name="exemplum"/></rng:optional>
       <rng:optional><rng:ref name="remarks"/></rng:optional>
  </rng:group>
  </content>
  <attList>
    <attDef ident="usage" usage="opt">
	<equiv/>
	<desc>specifies the optionality of an attribute or element.
 </desc>
      <defaultVal>opt</defaultVal>
      <valList type="closed">
        <valItem ident="req">
          <equiv/>
          <gloss>required</gloss>
        </valItem>
        <valItem ident="mwa">
          <equiv/>
          <gloss>mandatory when applicable  </gloss>
        </valItem>
        <valItem ident="rec">
          <equiv/>
          <gloss>recommended  </gloss>
        </valItem>
        <valItem ident="rwa">
          <equiv/>
          <gloss>recommended when applicable  </gloss>
        </valItem>
        <valItem ident="opt">
          <equiv/>
          <gloss>optional </gloss>
        </valItem>
      </valList>
    </attDef>
    <attDef ident="ns" usage="opt">
	<equiv/>
	<gloss>namespace</gloss>
	<desc>specifies the namespace to which this attribute belongs</desc>
	<datatype><rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="tei.data.enumerated"/></datatype>
	<defaultVal>http://www.tei-c.org/ns/1.0</defaultVal>
    </attDef>
  </attList>
  <exemplum>
    <egXML xmlns="http://www.tei-c.org/ns/Examples">      <attDef usage="rec" ident="type">
        <desc>specifies a name conventionally used for this
	level of subdivision, e.g. <q>act</q>, <q>volume</q>,
	<q>book</q>, <q>section</q>, <q>canto</q>, etc.</desc>
      </attDef>
    </egXML>
  </exemplum>
  <listRef>
    <ptr target="#TDATT"/>
  </listRef>
</elementSpec>
