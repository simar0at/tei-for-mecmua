<equiv/>
<gloss>correction</gloss>
<desc>contains the correct form of a passage apparently erroneous in the copy text.</desc>
  <classes>
    <memberOf key="tei.edit"/>
    <memberOf key="tei.chooseable"/>
    <memberOf key="tei.intervention"/>
  </classes>
  <content>
    <rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="macro.specialPara"/>
  </content>
