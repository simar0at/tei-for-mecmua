          <constitution type="single"/>
          <derivation type="original"/>
          <domain type="art"/>
          <factuality type="fiction"/>
          <interaction type="none"/>
          <preparedness type="prepared"/>
          <purpose type="entertain" degree="high"/>
          <purpose type="inform" degree="medium"/>
        </textDesc>
      </catDesc>
    </egXML>
  </exemplum>
