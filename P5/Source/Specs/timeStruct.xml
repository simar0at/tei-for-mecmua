<elementSpec xmlns="http://www.tei-c.org/ns/1.0" module="namesdates" xml:id="TIMESTRU" usage="opt" ident="timeStruct">
<equiv/>
<gloss/>
<desc>contains an internally structured representation for a time of day.</desc>
  <classes>
<!--    <memberOf key="model.pPart.data"/>-->
    <memberOf key="model.timeLike"/>
    <memberOf key="model.datePart"/>
    <memberOf key="att.datePart"/>
  </classes>
  <content>
    <rng:zeroOrMore xmlns:rng="http://relaxng.org/ns/structure/1.0">
      <rng:choice>
        <rng:text/>
<rng:ref name="model.gLike"/>
        <rng:ref name="model.datePart"/>
        <rng:ref name="model.global"/>
      </rng:choice>
    </rng:zeroOrMore>
  </content>
  <attList>
    <attDef ident="zone" usage="rwa">
	<equiv/>
	<desc>indicates time zone or place name wherever this is necessary to
		evaluate a temporal expression.</desc>
      <datatype><rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="data.enumerated"/></datatype>
      <valDesc>contains a word or phrase such as
		<mentioned>GMT</mentioned> or <mentioned>Eastern Standard
		  Time</mentioned> defining a time zone.</valDesc>
    </attDef>
  </attList>
  <exemplum>
    <egXML xmlns="http://www.tei-c.org/ns/Examples">      <timeStruct value="16:15:00">
        <hour>four</hour>
        <minute>fifteen</minute>
      </timeStruct>
    </egXML>
  </exemplum>
  <remarks>
    <p rend="dataDesc">May contain temporal components and character data
	only.</p>
  </remarks>
  <listRef>
    <ptr target="#CONADA" type="div3"/>
  </listRef>
</elementSpec>
