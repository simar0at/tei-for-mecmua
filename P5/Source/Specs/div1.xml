<elementSpec xmlns="http://www.tei-c.org/ns/1.0" module="textstructure" xml:id="DIV1" usage="rwa" ident="div1">
<equiv/>
<gloss>level-1 text division</gloss><gloss version="2006-10-28" xml:lang="ja">レベル1テキスト区分</gloss>
<desc>contains a first-level subdivision of the front, body, or back
of a text.</desc><desc version="2006-10-28" xml:lang="ja"> レベル0より小さい部分を示す．レベル0が無け
れば最大の部分になる．</desc><desc version="2007-02-10" xml:lang="es">contiene una subdivisión de primer nivel de los preliminares, cuerpo, o anexos de un texto.
		</desc>
  <classes>
    <memberOf key="att.divLike"/>
    <memberOf key="att.declaring"/>
    <memberOf key="model.div1Like"/>
  </classes>
  <content>
    <rng:group xmlns:rng="http://relaxng.org/ns/structure/1.0">
      <rng:zeroOrMore>
        <rng:choice>
          <rng:ref name="model.divWrapper"/>
          <rng:ref name="model.global"/>
        </rng:choice>
      </rng:zeroOrMore>
      <rng:choice>
        <rng:oneOrMore>
          <rng:choice>
            <rng:ref name="model.div2Like"/>
            <rng:ref name="model.divGenLike"/>
          </rng:choice>
          <rng:zeroOrMore>
            <rng:ref name="model.global"/>
          </rng:zeroOrMore>
        </rng:oneOrMore>
        <rng:group>
          <rng:oneOrMore>
            <rng:ref name="macro.component"/>
            <rng:zeroOrMore>
              <rng:ref name="model.global"/>
            </rng:zeroOrMore>
          </rng:oneOrMore>
          <rng:zeroOrMore>
            <rng:choice>
              <rng:ref name="model.div2Like"/>
              <rng:ref name="model.divGenLike"/>
            </rng:choice>
            <rng:zeroOrMore>
              <rng:ref name="model.global"/>
            </rng:zeroOrMore>
          </rng:zeroOrMore>
        </rng:group>
      </rng:choice>
      <rng:zeroOrMore>
	<rng:choice>
	  <rng:ref name="model.divWrapper"/>
	  <rng:ref name="model.divWrapper.bottom"/>
	</rng:choice>
	<rng:zeroOrMore>
	  <rng:ref name="model.global"/>
	</rng:zeroOrMore>
      </rng:zeroOrMore>
    </rng:group>
  </content>
  <exemplum>
    <egXML xmlns="http://www.tei-c.org/ns/Examples">      <div1 xml:id="levi" n="I" type="part">
        <head>Part I: Of Man </head>
        <div2 xml:id="levi1" n="1" type="chapter">
          <head>Chap. I. Of Sense </head>
          <p>Concerning the Thoughts of man... </p>
        </div2>
      </div1>
      <div1 xml:id="levii" n="II" type="part">
        <head>Part II: Of Common-Wealth</head>
      </div1>
    </egXML>
  </exemplum>
  <remarks>
    <p rend="dataDesc">any sequence of low-level structural elements, possibly grouped
into lower subdivisions.</p>
  </remarks>
  <listRef>
    <ptr target="#DSDIV2"/>
  </listRef>
</elementSpec>
