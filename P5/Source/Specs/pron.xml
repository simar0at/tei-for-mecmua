<elementSpec xmlns="http://www.tei-c.org/ns/1.0" module="dictionaries" xml:id="PRON" usage="rec" ident="pron">
  <equiv/>
  <gloss>pronunciation</gloss>
  <gloss version="2007-05-04" xml:lang="es">pronunciación</gloss>
  <gloss version="2006-10-28" xml:lang="ja">発音</gloss>
  <desc>contains the pronunciation(s) of the word.</desc>
  <desc version="2007-05-04" xml:lang="es">indica la pronunciación de la palabra.</desc>
  <desc version="2006-10-28" xml:lang="ja"> 当該語の発音を示す．</desc>
  <classes>
    <memberOf key="model.entryParts"/>
    <memberOf key="model.formPart"/>
    <memberOf key="att.lexicographic"/>
  </classes>
  <content>
    <rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="macro.paraContent"/>
  </content>
  <attList>
    <attDef ident="extent" usage="opt">
      <equiv/>
      <desc>indicates whether the pronunciation is for whole word or part. </desc>
      <desc version="2007-05-04" xml:lang="es">indica si se trata de la pronunciación de la palabra completa o de una parte.</desc>
      <desc version="2006-10-28" xml:lang="ja">当該発音が，語全体のものか一部かを示す．</desc>
      <datatype>
        <rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="data.enumerated"/>
      </datatype>
      <defaultVal>full</defaultVal>
      <valList type="open">
        <valItem ident="full">
          <equiv/>
          <desc>full form</desc>
          <desc version="2007-05-04" xml:lang="es">forma completa</desc>
        </valItem>
        <valItem ident="pref">
          <equiv/>
          <desc>prefix</desc>
          <desc version="2007-05-04" xml:lang="es">prefijo</desc>
        </valItem>
        <valItem ident="suff">
          <equiv/>
          <desc>suffix</desc>
          <desc version="2007-05-04" xml:lang="es">sufijo</desc>
        </valItem>
        <valItem ident="part">
          <equiv/>
          <desc>partial</desc>
          <desc version="2007-05-04" xml:lang="es">parcial</desc>
        </valItem>
      </valList>
      <exemplum>
        <egXML xmlns="http://www.tei-c.org/ns/Examples"/>
      </exemplum>
      <remarks>
        <p>
<!-- [Merge this and similar attributes into a class <term>partials</term>? -Ed.] -->
        </p>
      </remarks>
    </attDef>
    <attDef ident="notation" usage="rwa">
      <equiv/>
      <desc>indicates what notation is used for the pronunciation, if more than one occurs in
                the machine-readable dictionary. </desc>
      <desc version="2007-05-04" xml:lang="es">indica qué tipo de anotación se usa para la pronunciación, si aparece más de una posibilidad en el diccionario</desc>
      <desc version="2006-10-28" xml:lang="ja">当該発音の表記法が複数ある場合，その表記法を示す．</desc>
      <datatype>
        <rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="data.enumerated"/>
      </datatype>
      <valDesc>Sample values: IPA, Murray, ... </valDesc>
      <exemplum>
        <egXML xmlns="http://www.tei-c.org/ns/Examples"/>
      </exemplum>
      <remarks>
        <p/>
      </remarks>
    </attDef>
  </attList>
  <exemplum>
    <egXML xmlns="http://www.tei-c.org/ns/Examples">
      <entry>
        <form><orth>obverse</orth><pron>&amp;ACCENTäb-&amp;accentvərs</pron>, <pron extent="prefix">äb-&amp;ACCENT</pron>, <pron extent="prefix">əb-&amp;ACCENT</pron></form>
        <gramGrp>
          <pos>n</pos>
        </gramGrp>
      </entry>
    </egXML>
  </exemplum>
  <listRef>
    <ptr target="#DITPFO" type="div2"/>
  </listRef>
</elementSpec>
