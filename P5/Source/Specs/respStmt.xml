      </respStmt>
    </egXML>
  </exemplum>
  <exemplum xml:lang="zh-TW">
    <egXML xmlns="http://www.tei-c.org/ns/Examples">
      <respStmt>
        <resp>謄寫自原始手稿</resp>
        <persName>徐大明</persName>
      </respStmt>
    </egXML>
  </exemplum>
  <exemplum xml:lang="zh-TW">
    <egXML xmlns="http://www.tei-c.org/ns/Examples">
      <respStmt>
        <resp>轉換成SGML編碼</resp>
        <name>許雁</name>
      </respStmt>
    </egXML>
  </exemplum>
  <exemplum versionDate="2012-07-16" xml:lang="en">
