<elementSpec xmlns="http://www.tei-c.org/ns/1.0" module="drama" ident="spGrp">
  <equiv/>
  <gloss>speech group</gloss>
  <desc>A group of speeches or songs in a performance text presented
  in a source as being a single unit or number.</desc>
  <classes>
    <memberOf key="att.global"/>
    <memberOf key="model.divPart"/>
    <memberOf key="att.ascribed"/>
  </classes>
  <content xmlns:rng="http://relaxng.org/ns/structure/1.0">
    <rng:group>
      <rng:optional>
	<rng:ref name="model.headLike"/>
	</rng:optional>
      <rng:oneOrMore>
        <rng:ref name="model.global"/>
	<rng:ref name="sp"/>
	<rng:ref name="model.stageLike"/>
      </rng:oneOrMore>
    </rng:group>
  </content>
  <exemplum xml:lang="en">
    <egXML xmlns="http://www.tei-c.org/ns/Examples" corresp="#CODR-eg-296">
    </egXML>
  </exemplum>
  <listRef>
    <ptr target="#DRSP"/>
  </listRef>
</elementSpec>
