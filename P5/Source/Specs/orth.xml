<elementSpec xmlns="http://www.tei-c.org/ns/1.0" module="dictionaries" xml:id="ORTH" usage="rec" ident="orth">
<equiv/>
<gloss>orthographic form</gloss><gloss version="2006-10-28" xml:lang="ja">正書形</gloss>
<desc>gives the orthographic form of a dictionary headword.</desc><desc version="2006-10-28" xml:lang="ja"> 見出し語の正書形を示す．</desc>
    <classes>
        <memberOf key="model.entryParts"/>
        <memberOf key="model.formPart"/>
        <memberOf key="att.lexicographic"/>
    </classes>
    <content>
        <rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="macro.paraContent"/>
    </content>
    <attList>
        <attDef ident="type" usage="opt">
	<equiv/>
	<desc>gives the type of spelling.</desc><desc version="2006-10-28" xml:lang="ja">当該綴りの種類を示す．</desc>
            <datatype>
                <rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="data.enumerated"/>
            </datatype>
            <valDesc>Any convenient word or phrase, e.g. <mentioned>lat</mentioned>
                (latinate),<mentioned>std</mentioned> (standard), <mentioned>trans</mentioned>
                (transliterated), etc.</valDesc>
            <exemplum>
                <egXML xmlns="http://www.tei-c.org/ns/Examples"/>
            </exemplum>
            <remarks>
                <p/>
            </remarks>
        </attDef>
        <attDef ident="extent" usage="opt">
	<equiv/>
	<desc>gives the extent of the orthographic information provided.</desc><desc version="2006-10-28" xml:lang="ja">当該正書法があてはまっている程度を示す．</desc>
            <datatype>
	      <rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="data.enumerated"/>
            </datatype>
            <defaultVal>full</defaultVal>
            <valList type="open">
                <valItem ident="full">
                    <equiv/>
                    <gloss>full form</gloss>
                </valItem>
                <valItem ident="pref">
                    <equiv/>
                    <gloss>prefix</gloss>
                </valItem>
                <valItem ident="suff">
                    <equiv/>
                    <gloss>suffix</gloss>
                </valItem>
                <valItem ident="part">
                    <equiv/>
                    <gloss>partial</gloss>
                </valItem>
            </valList>
            <exemplum>
                <egXML xmlns="http://www.tei-c.org/ns/Examples"/>
            </exemplum>
            <remarks>
                <p/>
            </remarks>
        </attDef>
    </attList>
    <exemplum>
        <egXML xmlns="http://www.tei-c.org/ns/Examples"/>
    </exemplum>
    <remarks/>
    <listRef>
        <ptr target="#DITPFO" type="div2"/>
    </listRef>
</elementSpec>
