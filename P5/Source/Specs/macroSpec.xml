<elementSpec xmlns="http://www.tei-c.org/ns/1.0" module="tagdocs" xml:id="MACROSPEC" usage="opt" ident="macroSpec">
  <equiv/>
  <gloss/>
  <desc>documents the function and implementation of a pattern. </desc>
  <desc version="2007-05-04" xml:lang="es">documenta la función y la aplicación de un pattern (patrón).</desc>
  <desc version="2007-01-21" xml:lang="it">documenta la funzione e l'applicazione di un pattern</desc>
  <desc version="2006-10-28" xml:lang="ja">要素定義や属性定義の解説を示す．</desc>
  <classes>
    <memberOf key="model.oddDecl"/>
    <memberOf key="att.identified"/>
  </classes>
  <content>
    <rng:group xmlns:rng="http://relaxng.org/ns/structure/1.0">
      <rng:ref name="macro.glossSeq"/>
<!-- why one or more? -->
      <rng:oneOrMore>
        <rng:choice>
          <rng:ref name="stringVal"/>
          <rng:ref name="content"/>
        </rng:choice>
      </rng:oneOrMore>
      <rng:zeroOrMore>
        <rng:ref name="exemplum"/>
      </rng:zeroOrMore>
      <rng:zeroOrMore>
        <rng:ref name="remarks"/>
      </rng:zeroOrMore>
      <rng:zeroOrMore>
        <rng:ref name="listRef"/>
      </rng:zeroOrMore>
    </rng:group>
  </content>
  <attList>
    <attDef ident="type" usage="opt">
      <equiv/>
      <desc>indicates which type of entity should be generated, when an ODD
	processor is generating a module using SGML syntax.</desc>
      <desc version="2007-05-04" xml:lang="es">indica que tipo de entidad debe generarse cuando un procesador ODD genera un módulo utilizando la sintaxis SGML</desc>
      <desc version="2007-01-21" xml:lang="it">indica quale tipo di entità deve essere generata quando un processore ODD genera un modulo utilizzando la sintassi SGML</desc>
      <desc version="2006-10-28" xml:lang="ja">ODD処理系がSGML準拠のモジュールを生成する際，エンティティの種類を
示す．</desc>
      <valList type="closed">
        <valItem ident="pe">
          <equiv/>
          <desc>parameter entity</desc>
          <desc version="2007-05-04" xml:lang="es">entidad parámetro</desc>
          <desc version="2007-01-21" xml:lang="it">entità parametro</desc>
          <desc version="2006-10-28" xml:lang="ja">(パラメータエンティティ) </desc>
        </valItem>
        <valItem ident="epe">
          <equiv/>
          <desc>element parameter entity</desc>
          <desc version="2007-05-04" xml:lang="es">entidad parámetro de elemento</desc>
          <desc version="2007-01-21" xml:lang="it">entità parametro di elemento</desc>
          <desc version="2006-10-28" xml:lang="ja">(要素パラメータエンティティ) </desc>
        </valItem>
        <valItem ident="ge">
          <equiv/>
          <desc>general entity</desc>
          <desc version="2007-05-04" xml:lang="es">entidad general</desc>
          <desc version="2007-01-21" xml:lang="it">entità generale</desc>
          <desc version="2006-10-28" xml:lang="ja">(一般エンティティ) </desc>
        </valItem>
        <valItem ident="dt">
          <equiv/>
          <desc>datatype entity</desc>
          <desc version="2007-05-04" xml:lang="es">entidad tipo de datos</desc>
          <desc version="2007-01-21" xml:lang="it">entità tipo di dati</desc>
          <desc version="2006-10-28" xml:lang="ja">(データ型エンティティ) </desc>
        </valItem>
      </valList>
    </attDef>
  </attList>
</elementSpec>
