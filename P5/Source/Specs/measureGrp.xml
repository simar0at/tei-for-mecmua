<elementSpec xmlns="http://www.tei-c.org/ns/1.0" module="core" ident="measureGrp">
  <equiv/>
  <gloss/>
  <desc>contains a group of dimensional specifications which relate to
  the same object, for example the height and width of a manuscript page</desc>
  <classes>
    <memberOf key="att.measured"/>
    <memberOf key="att.typed"/>
    <memberOf key="model.measureLike"/>
  </classes>
  <content>
    <rng:zeroOrMore xmlns:rng="http://relaxng.org/ns/structure/1.0">
      <rng:choice>
        <rng:ref name="model.measureLike"/>
        <rng:ref name="text"/>
      </rng:choice>
    </rng:zeroOrMore>
  </content>
