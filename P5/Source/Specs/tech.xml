<elementSpec xmlns="http://www.tei-c.org/ns/1.0" module="drama" xml:id="TECH" usage="opt" ident="tech">
  <equiv/>
  <gloss>Technical stage direction</gloss>
  <desc>describes a special-purpose stage direction that is not
meant for the actors.</desc>
  <desc version="2006-10-28" xml:lang="ja">役者以外に向けた，特別な舞台指示を示す．</desc>
  <classes>
    <memberOf key="model.stageLike"/>
  </classes>
  <content>
    <rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="macro.paraContent"/>
  </content>
  <attList>
    <attDef ident="type" usage="opt">
      <equiv/>
      <desc>categorizes the technical stage direction.</desc>
      <desc version="2006-10-28" xml:lang="ja">当該舞台指示の分類を示す．</desc>
      <valList type="closed">
        <valItem ident="light">
          <equiv/>
          <desc>a lighting cue</desc>
          <desc version="2006-10-28" xml:lang="ja">照明係への指示</desc>
        </valItem>
        <valItem ident="sound">
          <equiv/>
          <desc>a sound cue</desc>
          <desc version="2006-10-28" xml:lang="ja">音響効果係への指示</desc>
        </valItem>
        <valItem ident="prop">
          <equiv/>
          <desc>a prop cue</desc>
          <desc version="2006-10-28" xml:lang="ja">道具係への指示</desc>
        </valItem>
        <valItem ident="block">
          <equiv/>
          <desc>a blocking instruction</desc>
          <desc version="2006-10-28" xml:lang="ja">演出係への指示</desc>
        </valItem>
      </valList>
    </attDef>
    <attDef ident="perf" usage="opt">
      <equiv/>
      <desc>identifies the performance or performances to which this
technical direction applies.</desc>
      <desc version="2006-10-28" xml:lang="ja">当該指示の対象となる演技を示す．</desc>
      <datatype>
        <rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="data.enumerated"/>
      </datatype>
      <valDesc>The IDREFS are derived from the <att>xml:id</att> attribute on a <gi>performance</gi> element.</valDesc>
    </attDef>
  </attList>
  <exemplum>
    <egXML xmlns="http://www.tei-c.org/ns/Examples">
      <tech type="light">Red spot on his face</tech>
    </egXML>
  </exemplum>
  <remarks>
    <p/>
  </remarks>
  <listRef>
    <ptr target="#DRTEC" type="div3"/>
  </listRef>
</elementSpec>
