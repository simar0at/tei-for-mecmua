<elementSpec xmlns="http://www.tei-c.org/ns/1.0" module="namesdates" xml:id="LISTPERS" usage="opt" ident="listPerson">
  <equiv/>
<!-- formerly particDesc -->
  <desc>contains a list of descriptions, each of which provides
information about an identifiable person or a group of people, for
example the participants in a language interaction, or the people referred
to in a historical source. </desc>
  <desc version="2007-01-21" xml:lang="it">contiene una lista di descrizioni, ciascuna delle quali fornisce informazioni relative a una persona specifica o a un gruppo di persone, per esempio i partecipanti a un'interazione verbale o le persone identificate da una fonte storica</desc>
  <desc version="2006-10-28" xml:lang="ja">特定可能な人物のリストを示す．例えば，対話の参加者，歴史資料中で
参照されている人物など．</desc>
  <classes>
<!-- memberOf key="model.profileDescPart"/-->
    <memberOf key="att.typed"/>
    <memberOf key="att.declarable"/>
    <memberOf key="model.biblLike"/>
    <memberOf key="model.personLike"/>
  </classes>
  <content>
    <rng:choice xmlns:rng="http://relaxng.org/ns/structure/1.0">
      <rng:oneOrMore>
        <rng:ref name="model.pLike"/>
      </rng:oneOrMore>
      <rng:group>
        <rng:oneOrMore>
          <rng:choice>
            <rng:ref name="person"/>
            <rng:ref name="personGrp"/>
          </rng:choice>
        </rng:oneOrMore>
        <rng:optional>
          <rng:ref name="particLinks"/>
        </rng:optional>
      </rng:group>
    </rng:choice>
  </content>
  <exemplum>
    <egXML xmlns="http://www.tei-c.org/ns/Examples">
      <listPerson type="respondents">
        <personGrp xml:id="PXXX"/>
        <person xml:id="P1234" sex="2" age="42"/>
        <person xml:id="P4332" sex="1" age="43"/>
        <particLinks>
          <relation type="personal" name="spouse" mutual="#P1234 #P4332"/>
        </particLinks>
      </listPerson>
    </egXML>
  </exemplum>
  <remarks>
    <p rend="dataDesc">The type attribute may be used to distinguish lists
    of people of a particular type if convenient.</p>
  </remarks>
  <listRef>
    <ptr target="#CCAH"/>
    <ptr target="#HD4"/>
    <ptr target="#CCAS2"/>
  </listRef>
</elementSpec>
