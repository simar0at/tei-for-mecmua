<elementSpec xmlns="http://www.tei-c.org/ns/1.0" module="tagdocs" xml:id="ATTLIST" usage="mwa" ident="attList">
  <equiv/>
  <gloss/>
  <desc>contains documentation for all the attributes associated with this
element, as a series of attDef elements.</desc>
  <desc version="2007-01-21" xml:lang="it">contiene la documentazione relativa agli attributi associati all'elemento in questione sotto forma di una serie di elementi attDef</desc>
  <desc version="2006-10-28" xml:lang="ja">当該要素に当てはまる全ての属性を示す．</desc>
  <desc version="2006-10-15" xml:lang="es">contiene la documentación de todos los atributos asociados con este elemento, como una serie de elementos defAtr (attDef).</desc>
  <content>
    <rng:oneOrMore xmlns:rng="http://relaxng.org/ns/structure/1.0">
      <rng:choice>
        <rng:ref name="attRef"/>
        <rng:ref name="attDef"/>
        <rng:ref name="attList"/>
      </rng:choice>
    </rng:oneOrMore>
  </content>
  <attList>
    <attDef ident="org">
      <equiv/>
      <desc>specifies whether all the attributes in the list are
  available (org="group") or only  one of them (org="choice")</desc>
      <desc version="2007-01-21" xml:lang="it">indica se gli attributi contenuti nella lista sono tutti disponibili (org="gruppo") o se ne è disponibile solo uno (org="scelta")</desc>
      <desc version="2006-10-28" xml:lang="ja">リスト中の属性全てが使用できるか，またはその1つだけが使用できるの
かを示す．</desc>
      <defaultVal>group</defaultVal>
      <valList type="closed">
        <valItem ident="group">
          <equiv/>
          <gloss>grouped</gloss>
          <gloss version="2007-01-21" xml:lang="it">raggruppati</gloss>
          <gloss version="2006-10-28" xml:lang="ja">(全て) </gloss>
        </valItem>
        <valItem ident="choice">
          <equiv/>
          <gloss>alternated</gloss>
          <gloss version="2007-01-21" xml:lang="it">alternati</gloss>
          <gloss version="2006-10-28" xml:lang="ja">(ひとつ) </gloss>
        </valItem>
      </valList>
    </attDef>
  </attList>
  <exemplum>
    <egXML xmlns="http://www.tei-c.org/ns/Examples">
      <attList>
        <attDef ident="type" usage="opt">
          <equiv/>
          <desc>type of schema</desc>
          <datatype>
            <rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="data.enumerated"/>
          </datatype>
        </attDef>
      </attList>
    </egXML>
  </exemplum>
  <remarks>
<!--p rend="dataDesc">contains a series of <gi>attDef</gi> elements only</p-->
  </remarks>
  <listRef>
    <ptr target="#TDTAG"/>
    <ptr target="#TDCLA"/>
  </listRef>
</elementSpec>
