<elementSpec xmlns="http://www.tei-c.org/ns/1.0" module="tagdocs" xml:id="ATTLIST" usage="mwa" ident="attList">
  <equiv/>
  <gloss/>
  <desc>contains documentation for all the attributes associated with this
element, as a series of attDef elements.</desc>
  <desc version="2007-01-21" xml:lang="it">contiene la documentazione relativa agli attributi associati all'elemento in questione sotto forma di una serie di elementi attDef</desc>
  <desc version="2007-05-04" xml:lang="es">contiene documentación relativa a todos los atributos asociados con este elemento bajo forma de series de elementos attDef.</desc>
  <desc version="2006-10-28" xml:lang="ja">当該要素に当てはまる全ての属性を示す．</desc>
  <content>
    <rng:oneOrMore xmlns:rng="http://relaxng.org/ns/structure/1.0">
      <rng:choice>
        <rng:ref name="attRef"/>
        <rng:ref name="attDef"/>
        <rng:ref name="attList"/>
      </rng:choice>
    </rng:oneOrMore>
  </content>
  <attList>
    <attDef ident="org">
      <gloss>organization</gloss>
      <desc>specifies whether all the attributes in the list are
  available (org="group") or only  one of them (org="choice")</desc>
      <desc version="2007-01-21" xml:lang="it">indica se gli attributi contenuti nella lista sono tutti disponibili (org="gruppo") o se ne è disponibile solo uno (org="scelta")</desc>
      <desc version="2007-05-04" xml:lang="es">indica si los atributos contenidos en la lista son todos disponibles (org="grupo") o si es disponible sólo uno (org="elección")</desc>
      <desc version="2006-10-28" xml:lang="ja">リスト中の属性全てが使用できるか，またはその1つだけが使用できるの
かを示す．</desc>
      <defaultVal>group</defaultVal>
      <valList type="closed">
        <valItem ident="group">
          <equiv/>
          <desc>grouped</desc>
          <desc version="2007-01-21" xml:lang="it">raggruppati</desc>
          <desc version="2007-05-04" xml:lang="es">grupación</desc>
          <desc version="2006-10-28" xml:lang="ja">(全て) </desc>
        </valItem>
        <valItem ident="choice">
          <equiv/>
          <desc>alternated</desc>
          <desc version="2007-01-21" xml:lang="it">alternati</desc>
          <desc version="2007-05-04" xml:lang="es">alternancia</desc>
          <desc version="2006-10-28" xml:lang="ja">(ひとつ) </desc>
        </valItem>
      </valList>
    </attDef>
  </attList>
  <exemplum>
    <egXML xmlns="http://www.tei-c.org/ns/Examples">
      <attList>
        <attDef ident="type" usage="opt">
          <equiv/>
          <desc>type of schema</desc>
          <datatype>
            <rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="data.enumerated"/>
          </datatype>
        </attDef>
      </attList>
    </egXML>
  </exemplum>
  <listRef>
    <ptr target="#TDTAG"/>
    <ptr target="#TDCLA"/>
  </listRef>
</elementSpec>
