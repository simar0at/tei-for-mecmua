<classSpec xmlns="http://www.tei-c.org/ns/1.0" module="tei" type="atts" xml:id="MEASURED" ident="att.measured">
  <desc>provides attributes which qualify a measurement of some kind.</desc>
  <desc version="2007-01-21" xml:lang="it">assegna degli attributi che qualificano una determinata misurazione</desc>
  <attList>
    <attDef ident="unit" usage="opt">
      <equiv/>
      <desc>names the units used for the measurement.</desc>
      <desc version="2007-01-21" xml:lang="it">specifica le unità usate per la misurazione</desc>
      <desc version="2006-10-28" xml:lang="ja">当該数値の単位を示す．</desc>
      <datatype>
        <rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="data.enumerated"/>
      </datatype>
      <valList type="semi">
        <valItem ident="cm">
          <gloss>centimetres</gloss>
          <gloss version="2007-01-21" xml:lang="it">centimetri</gloss>
        </valItem>
        <valItem ident="mm">
          <gloss>millimetres</gloss>
          <gloss version="2007-01-21" xml:lang="it">millimetri</gloss>
        </valItem>
        <valItem ident="in">
          <gloss>inches</gloss>
          <gloss version="2007-01-21" xml:lang="it">pollici</gloss>
        </valItem>
      </valList>
      <remarks>
        <p/>
      </remarks>
    </attDef>
    <attDef ident="scope" usage="opt">
      <equiv/>
      <desc>specifies the applicability of this measurement, where
   more than one object is being measured.</desc>
      <desc version="2007-01-21" xml:lang="it">indica l'applicabilità della misurazione, laddove venga misurato più di un oggetto</desc>
      <desc version="2006-10-28" xml:lang="ja">対象物が複数合った場合に，当該数値の適応範囲を示す．</desc>
      <datatype>
        <rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="data.enumerated"/>
      </datatype>
      <valList type="open">
        <valItem ident="all">
          <equiv/>
          <gloss>measurement applies to all instances.</gloss>
          <gloss version="2007-01-21" xml:lang="it">la misurazione fa riferimento a tutti i casi</gloss>
        </valItem>
        <valItem ident="most">
          <equiv/>
          <gloss>measurement applies to most of the instances inspected.</gloss>
          <gloss version="2007-01-21" xml:lang="it">la misurazione fa riferimento alla maggior parte dei casi esaminati</gloss>
        </valItem>
        <valItem ident="range">
          <equiv/>
          <gloss>measurement applies to only the specified range of instances.</gloss>
          <gloss version="2007-01-21" xml:lang="it">la misurazione fa riferimento solo ai casi specificati</gloss>
        </valItem>
      </valList>
      <remarks>
        <p/>
      </remarks>
    </attDef>
  </attList>
</classSpec>
