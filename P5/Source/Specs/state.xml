<?xml version="1.0" encoding="utf-8"?>
<elementSpec xmlns="http://www.tei-c.org/ns/1.0" xmlns:rng="http://relaxng.org/ns/structure/1.0" module="namesdates" ident="state">
  <desc>contains a description of some ongoing status or quality
attributed to a person, place, or organization.</desc>
  <desc version="2007-01-21" xml:lang="it">contiene la descrizione di uno stato o qualità durature di una persona</desc>
  <desc version="2006-10-28" xml:lang="ja">人物の現在の状態・状況について示す．</desc>
  <classes>
    <memberOf key="att.datable"/>
    <memberOf key="att.editLike"/>
    <memberOf key="att.typed"/>
    <memberOf key="att.naming"/>
    <memberOf key="model.persStateLike"/>
  </classes>
  <content>
    <rng:choice>
      <rng:ref name="state"/>
      <rng:group>
      <rng:optional>
        <rng:ref name="label"/>
      </rng:optional>
      <rng:optional>
        <rng:ref name="model.dateLike"/>
      </rng:optional>
      <rng:zeroOrMore>
        <rng:ref name="model.pLike"/>
      </rng:zeroOrMore>
      <rng:zeroOrMore>
        <rng:choice>
          <rng:ref name="model.noteLike"/>
          <rng:ref name="model.biblLike"/>
        </rng:choice>
      </rng:zeroOrMore>
    </rng:group>
    </rng:choice>  </content>
  <exemplum>
    <egXML xmlns="http://www.tei-c.org/ns/Examples">
      <person>
	<state ref="#SCHOL" type="status">
        <label>scholar</label>
      </state></person>
    </egXML>
  </exemplum>
</elementSpec>
