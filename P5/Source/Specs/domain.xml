<elementSpec xmlns="http://www.tei-c.org/ns/1.0" module="corpus" xml:id="DOMAIN" usage="opt" ident="domain">
  <equiv/>
  <gloss>Domain of use</gloss>
  <gloss version="2007-05-04" xml:lang="es">campo de uso</gloss>
  <gloss version="2006-10-28" xml:lang="ja">社会的状況</gloss>
  <desc>describes the most important social context in which the text was
realized or for which it is intended, for example private vs. public,
education, religion, etc.</desc>
  <desc version="2007-05-04" xml:lang="es">describle el contexto social más importante en el que el texto fue realizado o para el que se destina, p.ej. privado o público, educacional, religioso, etc.</desc>
  <desc version="2006-10-28" xml:lang="ja"> 当該テキストが現れた社会的状況を示す．例えば，私的，
公的，教育上，宗教上など．</desc>
  <classes>
    <memberOf key="model.textDescPart"/>
  </classes>
  <content>
    <rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="macro.phraseSeq.limited"/>
  </content>
  <attList>
    <attDef ident="type" usage="opt">
      <equiv/>
      <desc>categorizes the domain of use.
   </desc>
      <desc version="2007-05-04" xml:lang="es">clasifica el campo de uso.</desc>
      <desc version="2006-10-28" xml:lang="ja">当該社会的状況の分類を示す．</desc>
      <datatype>
        <rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="data.enumerated"/>
      </datatype>
      <valList type="open">
        <valItem ident="art">
          <equiv/>
          <gloss>art and entertainment
    </gloss>
          <gloss version="2007-05-04" xml:lang="es">arte y entretenimiento</gloss>
        </valItem>
        <valItem ident="domestic">
          <equiv/>
          <gloss>domestic and private
    </gloss>
          <gloss version="2007-05-04" xml:lang="es">doméstico y privado</gloss>
        </valItem>
        <valItem ident="religious">
          <equiv/>
          <gloss>religious and ceremonial
    </gloss>
          <gloss version="2007-05-04" xml:lang="es">religioso y ceremonial</gloss>
        </valItem>
        <valItem ident="business">
          <equiv/>
          <gloss>business and work place
    </gloss>
          <gloss version="2007-05-04" xml:lang="es">negocios o lugar de trabajo</gloss>
        </valItem>
        <valItem ident="education">
          <equiv/>
          <gloss>education
    </gloss>
          <gloss version="2007-05-04" xml:lang="es">educativo</gloss>
        </valItem>
        <valItem ident="govt">
          <equiv/>
          <gloss>government and law
    </gloss>
          <gloss version="2007-05-04" xml:lang="es">gubernamental y legal</gloss>
        </valItem>
        <valItem ident="public">
          <equiv/>
          <gloss>other forms of public context
   </gloss>
          <gloss version="2007-05-04" xml:lang="es">otros tipos de contextos públicos</gloss>
        </valItem>
      </valList>
    </attDef>
  </attList>
  <exemplum>
    <egXML xmlns="http://www.tei-c.org/ns/Examples">
      <domain type="domestic"/>
      <domain type="rel">religious broadcast</domain>
    </egXML>
  </exemplum>
  <remarks>
    <p rend="dataDesc">Usually empty, unless some further clarification of the type
attribute is needed, in which case it may contain running
prose.</p>
    <p>The list presented here is primarily for illustrative
purposes.</p>
  </remarks>
  <listRef>
    <ptr target="#CCAHTD"/>
  </listRef>
</elementSpec>
