<elementSpec xmlns="http://www.tei-c.org/ns/1.0" module="drama" xml:id="CASTITEM" usage="mwa" ident="castItem">
<equiv/>
<gloss>Cast list item</gloss>
<desc>contains a single entry within a cast list, describing
either a single role or a list of non-speaking roles.</desc>
  <content>
    <rng:zeroOrMore xmlns:rng="http://relaxng.org/ns/structure/1.0">
      <rng:choice>
        <rng:text/>
        <rng:ref name="model.gLike"/>
	<rng:ref name="model.castItemPart"/>
        <rng:ref name="model.phrase"/>
        <rng:ref name="model.global"/>
      </rng:choice>
    </rng:zeroOrMore>
  </content>
  <attList>
    <attDef ident="type" usage="opt">
	<equiv/>
	<desc>characterizes the cast item.
   </desc>
      <defaultVal>role</defaultVal>
      <valList type="closed">
        <valItem ident="role">
          <equiv/>
          <gloss>the item describes a single role.
       </gloss>
        </valItem>
        <valItem ident="list">
          <equiv/>
          <gloss>the item describes a list of non-speaking roles.
   </gloss>
        </valItem>
      </valList>
    </attDef>
  </attList>
  <exemplum>
    <egXML xmlns="http://www.tei-c.org/ns/Examples">      <castItem>
        <role>Player</role>
        <actor>Mr Milward</actor>
      </castItem>
    </egXML>
  </exemplum>
  <exemplum>
    <egXML xmlns="http://www.tei-c.org/ns/Examples">      <castItem type="list">Constables, Drawer, Turnkey, etc.</castItem>
    </egXML>
  </exemplum>
  <remarks/>
  <listRef>
    <ptr target="#DRCAST" type="div3"/>
  </listRef>
</elementSpec>
