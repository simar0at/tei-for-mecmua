<macroSpec xmlns="http://www.tei-c.org/ns/1.0" type="pe" ident="macro.anyXML" module="tei">
  <desc>defines a content model within which any XML elements are
  permitted</desc>
  <desc version="2009-07-16" xml:lang="fr">définit un modèle de contenu dans lequel tous les
    éléments XML sont autorisés.</desc>
  <content>
    <element xmlns="http://relaxng.org/ns/structure/1.0">
      <anyName/>
      <zeroOrMore>
	<attribute>
	  <anyName/>
	</attribute>
      </zeroOrMore>
      <zeroOrMore>
	<text/>
	<ref name="macro.anyXML"/>
      </zeroOrMore>
    </element>

  </content>

</macroSpec>
