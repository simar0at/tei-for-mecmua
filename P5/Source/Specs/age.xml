<elementSpec xmlns="http://www.tei-c.org/ns/1.0" xmlns:rng="http://relaxng.org/ns/structure/1.0" module="namesdates" ident="age">
  <desc>specifies the age of a person.</desc>
  <classes>
    <memberOf key="model.persTraitLike"/>
    <memberOf key="att.editLike"/>
    <memberOf key="att.datable"/> <!-- sic -->
  </classes>
  <content>
    <rng:ref name="macro.phraseSeq"/>
  </content>
  <attList>
    <attDef ident="value" usage="opt">
<desc>supplies a numeric code representing the age or age group</desc>
      <datatype><rng:ref name="data.count"/></datatype>
<remarks>
    <p>This attribute may be used to complement a more detailed
    discussion of a person's age in the content of the element</p>
</remarks>
    </attDef>
  </attList>
  <exemplum>
    <egXML xmlns="http://www.tei-c.org/ns/Examples">
	<age value="2" notAfter="1986">under 20 in the early eighties</age>
    </egXML>
  </exemplum>
</elementSpec>
