<elementSpec xmlns="http://www.tei-c.org/ns/1.0" module="textstructure" xml:id="DIV0" usage="rwa" ident="div0">
  <equiv/>
  <gloss>level-0 text division</gloss>
  <gloss version="2007-01-21" xml:lang="it">partizione testuale di livello 0</gloss>
  <gloss version="2006-10-28" xml:lang="ja">レベル0テキスト区分</gloss>
  <desc>contains the largest possible subdivision of the body
  of a text.</desc>
  <desc version="2007-01-21" xml:lang="it">contiene la sezione più ampia possibile del corpo di un testo</desc>
  <desc version="2006-10-28" xml:lang="ja"> 最大の部分を示す．</desc>
  <desc version="2006-10-15" xml:lang="es">contiene la mayor subdivisión posible del cuerpo de un texto.</desc>
  <classes>
    <memberOf key="att.divLike"/>
    <memberOf key="att.declaring"/>
  </classes>
  <content>
    <rng:group xmlns:rng="http://relaxng.org/ns/structure/1.0">
      <rng:zeroOrMore>
        <rng:choice>
          <rng:ref name="model.divWrapper"/>
          <rng:ref name="model.global"/>
        </rng:choice>
      </rng:zeroOrMore>
      <rng:choice>
        <rng:oneOrMore>
          <rng:choice>
            <rng:ref name="div1"/>
            <rng:ref name="divGen"/>
          </rng:choice>
          <rng:zeroOrMore>
            <rng:ref name="model.global"/>
          </rng:zeroOrMore>
        </rng:oneOrMore>
        <rng:group>
          <rng:oneOrMore>
	    <rng:group>
              <rng:ref name="model.common"/>
	    </rng:group>
            <rng:zeroOrMore>
              <rng:ref name="model.global"/>
            </rng:zeroOrMore>
          </rng:oneOrMore>
          <rng:zeroOrMore>
            <rng:choice>
              <rng:ref name="div1"/>
              <rng:ref name="divGen"/>
            </rng:choice>
            <rng:zeroOrMore>
              <rng:ref name="model.global"/>
            </rng:zeroOrMore>
          </rng:zeroOrMore>
        </rng:group>
      </rng:choice>
      <rng:zeroOrMore>
        <rng:choice>
          <rng:ref name="model.divWrapper"/>
          <rng:ref name="model.divWrapper.bottom"/>
        </rng:choice>
        <rng:zeroOrMore>
          <rng:ref name="model.global"/>
        </rng:zeroOrMore>
      </rng:zeroOrMore>
    </rng:group>
  </content>
  <exemplum>
    <egXML xmlns="http://www.tei-c.org/ns/Examples">
      <div0 n="I" xml:id="LEVI" type="part">
        <head>Part I: Of Man </head>
        <div1 n="1" xml:id="LEVI1" type="chapter">
          <head>Chap. I. Of Sense </head>
          <p>Concerning the Thoughts of man... </p>
        </div1>
      </div0>
      <div0 n="II" xml:id="LEVII" type="part">
        <head>Part II: Of Common-Wealth</head>
      </div0>
    </egXML>
  </exemplum>
  <remarks>
    <p rend="dataDesc">any sequence of low-level structural elements, possibly grouped
into lower subdivisions.</p>
  </remarks>
  <listRef>
    <ptr target="#DSDIV2"/>
  </listRef>
</elementSpec>
