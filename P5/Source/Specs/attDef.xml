<elementSpec xmlns="http://www.tei-c.org/ns/1.0" module="tagdocs" xml:id="ATTDEF" usage="mwa" ident="attDef">
  <equiv/>
  <gloss>attribute definition</gloss>
  <gloss version="2007-01-21" xml:lang="it">definizione di attributo</gloss>
  <gloss version="2007-05-04" xml:lang="es">definición de atributo</gloss>
  <gloss version="2006-10-28" xml:lang="ja">属性定義</gloss>
  <desc>contains the definition of a single attribute.</desc>
  <desc version="2007-01-21" xml:lang="it">contiene la definizione di un unico attributo</desc>
  <desc version="2007-05-04" xml:lang="es">contiene la definición de un único atributo.</desc>
  <desc version="2006-10-28" xml:lang="ja"> 属性の定義を示す．</desc>
  <classes>
    <memberOf key="att.identified"/>
  </classes>
  <content>
    <rng:group xmlns:rng="http://relaxng.org/ns/structure/1.0">
      <rng:ref name="macro.glossSeq"/>
      <rng:optional>
        <rng:ref name="datatype"/>
      </rng:optional>
      <rng:optional>
        <rng:ref name="defaultVal"/>
      </rng:optional>
      <rng:optional>
        <rng:choice>
          <rng:ref name="valList"/>
          <rng:ref name="valDesc"/>
        </rng:choice>
      </rng:optional>
      <rng:zeroOrMore>
        <rng:ref name="exemplum"/>
      </rng:zeroOrMore>
      <rng:zeroOrMore>
        <rng:ref name="remarks"/>
      </rng:zeroOrMore>
    </rng:group>
  </content>
  <attList>
    <attDef ident="usage" usage="opt">
      <equiv/>
      <desc>specifies the optionality of an attribute or element.
 </desc>
      <desc version="2007-01-21" xml:lang="it">indica il carattere facoltativo di un attributo o elemento</desc>
      <desc version="2007-05-04" xml:lang="es">especifica el caracter opcional de un atributo o un elemento</desc>
      <desc version="2006-10-28" xml:lang="ja">属性または要素の選択性を示す．</desc>
      <defaultVal>opt</defaultVal>
      <valList type="closed">
        <valItem ident="req">
          <equiv/>
          <gloss>required</gloss>
          <gloss version="2007-05-04" xml:lang="es">requerido</gloss>
          <gloss version="2006-10-28" xml:lang="ja">(必須) </gloss>
        </valItem>
        <valItem ident="mwa">
          <equiv/>
          <gloss>mandatory when applicable  </gloss>
          <gloss version="2007-05-04" xml:lang="es">obligatorio cuando es pertinente</gloss>
          <gloss version="2006-10-28" xml:lang="ja">(使えるならば必須) </gloss>
        </valItem>
        <valItem ident="rec">
          <equiv/>
          <gloss>recommended  </gloss>
          <gloss version="2007-05-04" xml:lang="es">recomendado</gloss>
          <gloss version="2006-10-28" xml:lang="ja">(推奨)</gloss>
        </valItem>
        <valItem ident="rwa">
          <equiv/>
          <gloss>recommended when applicable  </gloss>
          <gloss version="2007-05-04" xml:lang="es">recomendado cuando es pertinente</gloss>
          <gloss version="2006-10-28" xml:lang="ja">(使えるならば推奨)</gloss>
        </valItem>
        <valItem ident="opt">
          <equiv/>
          <gloss>optional </gloss>
          <gloss version="2007-05-04" xml:lang="es">opcional</gloss>
          <gloss version="2006-10-28" xml:lang="ja">(選択的)</gloss>
        </valItem>
      </valList>
    </attDef>
    <attDef ident="ns" usage="opt">
      <equiv/>
      <gloss>namespace</gloss>
      <gloss version="2007-01-21" xml:lang="it">spazio del nome</gloss>
      <gloss version="2007-05-04" xml:lang="es">espacio de nombre</gloss>
      <desc>specifies the namespace to which this attribute belongs</desc>
      <desc version="2007-01-21" xml:lang="it">indica lo spazio del nome al quale appartiene l'attributo</desc>
      <desc version="2007-05-04" xml:lang="es">especifica el espacio del nombre al que pertenece el atributo.</desc>
      <desc version="2006-10-28" xml:lang="ja">(名前空間) 当該属性が属する名前空間を示す．</desc>
      <datatype>
        <rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="data.namespace"/>
      </datatype>
      <defaultVal>http://www.tei-c.org/ns/1.0</defaultVal>
    </attDef>
  </attList>
  <exemplum>
    <egXML xmlns="http://www.tei-c.org/ns/Examples">
      <attDef usage="rec" ident="type">
        <desc>specifies a name conventionally used for this
	level of subdivision, e.g. <val>act</val>, <val>volume</val>,
	<val>book</val>, <val>section</val>, <val>canto</val>, etc.</desc>
      </attDef>
    </egXML>
  </exemplum>
  <listRef>
    <ptr target="#TDATT"/>
  </listRef>
</elementSpec>
