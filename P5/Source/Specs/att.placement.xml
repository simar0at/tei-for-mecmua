<classSpec xmlns="http://www.tei-c.org/ns/1.0" module="tei" type="atts" ident="att.placement">
  <desc>provides attributes for describing where on the source page or
  object a textual element appears.</desc>
  <desc version="2007-01-21" xml:lang="it">identifica degli attributi che descrivono la collocazione di un elemento testuale all'interno della pagina o dell'oggetto di origine</desc>
  <desc version="2007-05-04" xml:lang="es">proporciona atributos para describir en que página u objeto de la fuente aparece el elemento textual.</desc>
  <attList>
    <attDef ident="place" usage="rec">
      <datatype>
        <rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="data.enumerated"/>
      </datatype>
      <valList type="semi">
<!-- general purpose, alphabetical order -->
        <valItem ident="infralinear">
          <desc>below the line</desc>
          <desc version="2007-05-04" xml:lang="es">debajo de la línea</desc>
        </valItem>
        <valItem ident="margin-bot">
          <gloss>bottom margin</gloss>
          <gloss version="2007-08-25" xml:lang="it">in bottom margin</gloss>
          <gloss version="2007-01-21" xml:lang="it">nel margine inferiore</gloss>
          <desc>in the bottom margin</desc>
          <desc version="2007-05-04" xml:lang="es">en el margen inferior</desc>
        </valItem>
        <valItem ident="margin-left">
          <gloss>left margin</gloss>
          <gloss version="2007-08-25" xml:lang="it">in left margin</gloss>
          <gloss version="2007-01-21" xml:lang="it">nel margine sinistro</gloss>
          <desc>in the left margin</desc>
          <desc version="2007-05-04" xml:lang="es">en el margen izquierdo</desc>
        </valItem>
        <valItem ident="margin-right">
          <gloss>right margin</gloss>
          <gloss version="2007-08-25" xml:lang="it">in right margin</gloss>
          <gloss version="2007-01-21" xml:lang="it">nel margine destro</gloss>
          <desc>in the right margin</desc>
          <desc version="2007-05-04" xml:lang="es">en el margen derecho</desc>
        </valItem>
        <valItem ident="margin-top">
          <gloss>top margin</gloss>
          <gloss version="2007-08-25" xml:lang="it">in top margin</gloss>
          <gloss version="2007-01-21" xml:lang="it">nel margine superiore</gloss>
          <desc>in the top margin</desc>
          <desc version="2007-05-04" xml:lang="es">en el margen superior</desc>
        </valItem>
        <valItem ident="opposite">
          <desc>on the opposite, i.e. facing, page</desc>
          <desc version="2007-05-04" xml:lang="es">en la página de al lado</desc>
        </valItem>
        <valItem ident="overleaf">
          <desc>on the other side of the leaf</desc>
          <desc version="2007-05-04" xml:lang="es">en el otro lado del folio</desc>
        </valItem>
        <valItem ident="supralinear">
          <desc>above the line</desc>
          <desc version="2007-05-04" xml:lang="es">encima de la línea</desc>
        </valItem>
        <valItem ident="verso">
          <desc>on verso of the sheet or page</desc>
          <desc version="2007-05-04" xml:lang="es">en el dorso de la hoja</desc>
        </valItem>
<!-- notes only -->
        <valItem ident="app">
          <gloss>apparatus</gloss>
          <gloss version="2007-08-25" xml:lang="it">note appears in the apparatus at the foot of the page.</gloss>
          <gloss version="2007-01-21" xml:lang="it">le note appaiono nell'apparato a pie' di pagina</gloss>
          <desc>note appears in the apparatus at the foot of the page.</desc>
          <desc version="2007-05-04" xml:lang="es">las notas aparecen en el aparato a pie de página</desc>
        </valItem>
        <valItem ident="end">
          <desc>note appears at end of chapter or volume.</desc>
          <desc version="2007-05-04" xml:lang="es">las notas aparecen al final del capítulo o volumen</desc>
        </valItem>
        <valItem ident="foot">
          <desc>note appears at foot of page.</desc>
          <desc version="2007-05-04" xml:lang="es">las notas aparecen a pie de página</desc>
        </valItem>
        <valItem ident="inline">
          <desc>note appears as a marked paragraph in the body of the text.</desc>
          <desc version="2007-05-04" xml:lang="es">las notas aparecen como un párrafo en el cuerpo del texto.</desc>
          <desc version="2007-06-14" xml:lang="es">addition is made in a space left in the witness by an earlier scribe.</desc>
          <desc version="2007-05-04" xml:lang="es">la adición se ha hecho en un espacio que un transcriptor precedente había dejado en el testimonio.</desc>
        </valItem>
        <valItem ident="interlinear">
          <desc>note appears between lines of the text; a less precise form of either <val>infralinear</val> or <val>supralinear</val>.</desc>
          <desc version="2007-05-04" xml:lang="es">las notas aparecen entre las líneas del texto, de manera menos precisa de una nota <val>interlineal</val> o <val>superlineal</val></desc>
        </valItem>
<!-- adds only -->
        <valItem ident="inline">
          <desc>addition is made in a space left in the witness by an earlier scribe.</desc>
          <desc version="2007-06-14" xml:lang="es">note appears as a marked paragraph in the body of the text.</desc>
          <desc version="2007-05-04" xml:lang="es">las notas aparecen como un párrafo en el cuerpo del texto.</desc>
          <desc version="2007-05-04" xml:lang="es">la adición se ha hecho en un espacio que un transcriptor precedente había dejado en el testimonio.</desc>
        </valItem>
<!-- special-purpose -->
        <valItem ident="mixed">
          <desc>one or more of the other values</desc>
          <desc version="2007-05-04" xml:lang="es">uno o más de los otros valores.</desc>
        </valItem>
      </valList>
