      </remarks>
    </attDef>
-->
      <exemplum>
        <egXML xmlns="http://www.tei-c.org/ns/Examples"/>
      </exemplum>
    </attDef>
  </attList>
  <listRef>
    <ptr target="#COEDADD"/>
    <ptr target="#PHAD"/>
  </listRef>
</classSpec>
