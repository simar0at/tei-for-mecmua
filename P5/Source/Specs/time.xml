<elementSpec xmlns="http://www.tei-c.org/ns/1.0" module="core" xml:id="TIME" usage="opt" ident="time">
  <equiv/>
  <gloss/>
  <desc>contains a phrase defining a time of day in any format.</desc>
  <desc version="2007-05-04" xml:lang="es">contiene un sintagma que define un momento del día en cualquier formato.</desc>
  <desc version="2006-06-05" xml:lang="zh-tw">包含一天中時間任何形式的表示用語。</desc>
  <desc version="2006-10-28" xml:lang="ja">時間を示す語句．</desc>
  <classes>
    <memberOf key="model.dateLike"/>
    <memberOf key="att.datable"/>
    <memberOf key="att.duration"/>
    <memberOf key="att.editLike"/>
    <memberOf key="att.typed"/>
  </classes>
  <content>
    <rng:zeroOrMore xmlns:rng="http://relaxng.org/ns/structure/1.0">
      <rng:choice>
        <rng:text/>
        <rng:ref name="model.gLike"/>
<!--        <rng:ref name="model.datePart"/>-->
        <rng:ref name="model.phrase"/>
        <rng:ref name="model.global"/>
      </rng:choice>
    </rng:zeroOrMore>

  </content>
  <exemplum>
    <egXML xmlns="http://www.tei-c.org/ns/Examples">As he sat smiling, the quarter struck —
	  <time when="11:45:00">the quarter to twelve</time>.</egXML>
<!-- Woolf, Mrs Dalloway, p64 -->
  </exemplum>
  <remarks/>
  <listRef>
    <ptr target="#CONADA" type="div3"/>
  </listRef>
</elementSpec>
