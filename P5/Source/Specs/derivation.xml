<elementSpec xmlns="http://www.tei-c.org/ns/1.0" module="corpus" xml:id="DERIVATN" usage="opt" ident="derivation">
<equiv/>
<gloss/>
<desc>describes the nature and extent of originality of this text.</desc><desc version="2006-10-28" xml:lang="ja">当該テキストの真性度を示す．</desc><desc version="2006-10-15" xml:lang="es">describe la naturaleza y grado de originalidad de este texto.</desc>
<classes>
  <memberOf key="model.textDescPart"/>
</classes>
  <content>
    <rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="macro.phraseSeq.limited"/>
  </content>
  <attList>
    <attDef ident="type" usage="opt">
	<equiv/>
	<desc>categorizes the derivation of the text.
   </desc><desc version="2006-10-28" xml:lang="ja">当該テキストの起源の分類を示す．</desc>
      <datatype><rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="data.enumerated"/></datatype>
      <valList type="open">
        <valItem ident="original">
          <equiv/>
          <gloss>text is original
        </gloss>
        </valItem>
        <valItem ident="revision">
          <equiv/>
          <gloss>text is a revision of some other text
        </gloss>
        </valItem>
        <valItem ident="translation">
          <equiv/>
          <gloss>text is a translation of some other text
        </gloss>
        </valItem>
        <valItem ident="abridgment">
          <equiv/>
          <gloss>text is an abridged version of some other text
        </gloss>
        </valItem>
        <valItem ident="plagiarism">
          <equiv/>
          <gloss>text is plagiarized from some other text
        </gloss>
        </valItem>
        <valItem ident="traditional">
          <equiv/>
          <gloss>text has no obvious source but is one of a
        number derived from some common ancestor
    </gloss>
        </valItem>
      </valList>
    </attDef>
  </attList>
  <exemplum>
    <egXML xmlns="http://www.tei-c.org/ns/Examples">
      <derivation type="original"/>
    </egXML>
  </exemplum>
  <remarks>
    <p>For derivative texts, details of the ancestor
may be included in the source description.</p>
  </remarks>
  <listRef>
    <ptr target="#CCAHTD"/>
  </listRef>
</elementSpec>
