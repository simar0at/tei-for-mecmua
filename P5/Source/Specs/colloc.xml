<elementSpec xmlns="http://www.tei-c.org/ns/1.0" module="dictionaries" xml:id="COLLOC" usage="opt"
    ident="colloc">
    <equiv/>
    <gloss>collocate</gloss>
    <gloss version="2006-10-28" xml:lang="ja">連語</gloss>
    <desc>contains a collocate of the headword.</desc>
    <desc version="2006-10-28" xml:lang="ja"> 見出し語の連語関係を示す．</desc>
    <desc version="2006-10-15" xml:lang="es">contiene una colocación del vocablo.</desc>
    <classes>
        <memberOf key="model.entryParts"/>
        <memberOf key="model.gramPart"/>
        <memberOf key="att.lexicographic"/>
    </classes>
    <content>
        <rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="macro.paraContent"/>
    </content>
    <attList>
        <attDef ident="type" usage="opt">
            <equiv/>
            <desc>classifies the collocation, using any convenient typology.</desc>
            <desc version="2006-10-28" xml:lang="ja">当該連語の分類を示す．</desc>
            <datatype>
                <rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="data.word"/>
            </datatype>
            <valDesc>any string of XML name characters, e.g. <mentioned>preposition</mentioned>.</valDesc>
            <exemplum>
                <egXML xmlns="http://www.tei-c.org/ns/Examples"/>
            </exemplum>
            <remarks>
                <p/>
            </remarks>
        </attDef>
    </attList>
    <exemplum>
        <egXML xmlns="http://www.tei-c.org/ns/Examples">
            <entry>
                <form>
                    <orth>médire</orth>
                </form>
                <gramGrp>
                    <colloc type="prep">de</colloc>
                </gramGrp>
            </entry>
        </egXML>
    </exemplum>
    <remarks>
        <p/>
    </remarks>
    <listRef>
        <ptr target="#DITPGR"/>
    </listRef>
</elementSpec>

