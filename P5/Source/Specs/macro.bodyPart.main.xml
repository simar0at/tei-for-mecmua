<macroSpec xmlns="http://www.tei-c.org/ns/1.0" module="tei" type="pe" ident="macro.bodyPart.main">
  <gloss>main set of common elements in <gi>body</gi></gloss>
  <desc>groups together a sequence of declarations which are used in
  the definition of the <gi>body</gi> element</desc>
  <content xmlns:rng="http://relaxng.org/ns/structure/1.0" xmlns="http://www.tei-c.org/ns/1.0">
    <rng:group>      <!-- this <group> exists just so odd2dtd can put a comma in right place  -->
      <rng:group>      <!-- this <group> exists just so odd2dtd can get parens in right place  -->
	<rng:ref name="macro.bodyPart.pre"/>
      </rng:group>
      <rng:choice>
	<rng:group>      <!-- this <group> exists just so odd2dtd can get parens in right place  -->
	  <rng:ref name="macro.bodyPart.div"/>
	</rng:group>
	<rng:group>      <!-- this <group> exists just so odd2dtd can get parens in right place  -->
	  <rng:ref name="macro.bodyPart.div0"/>
	</rng:group>
	<rng:group>      <!-- this <group> exists just so odd2dtd can get parens in right place  -->
	  <rng:ref name="macro.bodyPart.div1"/>
	</rng:group>
      </rng:choice>
    </rng:group>
  </content>
  <listRef>
    <ptr target="#DS"/>
    <ptr target="#STECMI"/>
  </listRef>
</macroSpec>
