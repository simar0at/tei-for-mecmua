<elementSpec xmlns="http://www.tei-c.org/ns/1.0" module="spoken" xml:id="EVENT" usage="rec" ident="event">
<equiv/>
<gloss>Event</gloss>
<desc>any phenomenon or occurrence, not necessarily vocalized or
communicative, for example incidental noises or other events affecting
communication.</desc>
  
  
  <classes>
    <memberOf key="tei.comp.spoken"/>
    <memberOf key="tei.timed"/>
  </classes>
  <content>
    <rng:empty xmlns:rng="http://relaxng.org/ns/structure/1.0"/>
  </content>
  <attList>
    <attDef ident="who" usage="opt">
	<equiv/>
	<desc>supplies an identifier for the agent of the event described,
         if any.
         Its value is the identifier of a <tag>participant</tag>
         or <tag>participant.grp</tag> element in the TEI header.</desc>
      
      
      <datatype><rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="datatype.uri"/></datatype>
      <valDesc>Must identify a participant or participant group within the
       TEI Header</valDesc>
      
    </attDef>
    <attDef ident="iterated" usage="opt">
	<equiv/>
	<desc>indicates whether or not the phenomenon is repeated.</desc>
      
      
      <datatype><rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="datatype.UBoolean"/></datatype>
      <defaultVal>false</defaultVal>
      <valList type="closed">
        <valItem ident="true">
          
          <equiv/>
          <gloss>the phenomenon is repeated. </gloss>
        </valItem>
        <valItem ident="false">
          
          <equiv/>
          <gloss>the phenomenon is atomic. </gloss>
        </valItem>
        <valItem ident="unknown">
          
          <equiv/>
          <gloss>unknown or unmarked.</gloss>
        </valItem>
      </valList>
      
      <remarks/>
    </attDef>
    <attDef ident="desc" usage="opt">
	<equiv/>
	<desc>supplies a conventional representation for the phenomenon.</desc>
      
      
      <datatype><rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="datatype.Code"/></datatype>
      <valDesc>a description or representation of the phenomenon chosen from a semi-closed list</valDesc>
      
      <remarks/>
    </attDef>
  </attList>
  
  <exemplum>
    <egXML xmlns="http://www.tei-c.org/ns/Examples">      <event desc="ceiling collapses"/>
    </egXML>
  </exemplum>
  <remarks/>
  <listRef>
    <ptr target="#TSBAFD"/>
    <ptr target="#TSBA"/>
    <ptr target="#TSBAVO"/>
  </listRef>
</elementSpec>
