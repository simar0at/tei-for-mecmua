<classSpec xmlns="http://www.tei-c.org/ns/1.0" module="tei" type="atts" xml:id="MEASURED" ident="att.measured">
<desc>provides attributes which qualify a measurement of some kind.</desc>
  <attList>
    <attDef ident="unit" usage="opt">
	<equiv/>
	<desc>names the units used for the measurement.</desc>
	<datatype>
	  <rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="data.enumerated"/>
	</datatype>
<valList type="semi">
<valItem ident="cm"><gloss>centimetres</gloss></valItem>
<valItem ident="mm"><gloss>millimetres</gloss></valItem>
<valItem ident="in"><gloss>inches</gloss></valItem>
</valList>
      <remarks>
        <p/>
      </remarks>
    </attDef>
    <attDef ident="scope" usage="opt">
	<equiv/>
	<desc>specifies the applicability of this measurement, where
   more than one object is being measured.</desc>
	<datatype>
	  <rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="data.enumerated"/>
	</datatype>
      <valList type="open">
        <valItem ident="all">
          <equiv/>
          <gloss>measurement applies to all instances.</gloss>
        </valItem>
        <valItem ident="most">
          <equiv/>
          <gloss>measurement applies to most of the instances inspected.</gloss>
        </valItem>
        <valItem ident="range">
          <equiv/>
          <gloss>measurement applies to only the specified range of instances.</gloss>
        </valItem>
</valList>
      <remarks>
        <p/>
      </remarks>
    </attDef>
</attList>
</classSpec>
