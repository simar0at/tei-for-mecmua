<elementSpec xmlns="http://www.tei-c.org/ns/1.0" module="nets" xml:id="ETREE" usage="opt" ident="eTree">
<equiv/>
<gloss>embedding tree</gloss>
<desc>provides an alternative to tree element for representing
ordered rooted tree structures.</desc>
  <classes>
    <memberOf key="model.divPart"/>
  </classes>
  <content>
    <rng:zeroOrMore xmlns:rng="http://relaxng.org/ns/structure/1.0">
      <rng:choice>
        <rng:ref name="eTree"/>
        <rng:ref name="triangle"/>
        <rng:ref name="eLeaf"/>
      </rng:choice>
    </rng:zeroOrMore>
  </content>
  <attList>
    <attDef ident="label" usage="rwa">
	<equiv/>
	<desc>gives a label for an embedding tree.</desc>
      <datatype><rng:text xmlns:rng="http://relaxng.org/ns/structure/1.0"/></datatype>
      <valDesc>A character string.</valDesc>
    </attDef>
    <attDef ident="value" usage="rwa">
	<equiv/>
	<desc>provides the value of an embedding tree, which is a feature
structure or other analytic element.</desc>
      <datatype><rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="data.pointer"/></datatype>
      <valDesc>A valid identifier of a feature structure or other analytic
element.</valDesc>
    </attDef>
  </attList>
  <exemplum>
    <egXML xmlns="http://www.tei-c.org/ns/Examples">      <eTree n="ex1" label="PP">
        <eTree label="P">
          <eLeaf label="with"/>
        </eTree>
        <eTree label="NP">
          <eTree label="Art">
            <eLeaf label="the"/>
          </eTree>
          <eTree label="N">
            <eLeaf label="periscope"/>
          </eTree>
        </eTree>
      </eTree>
    </egXML>
  </exemplum>
  <remarks>
    <p rend="dataDesc">zero or
more embedding trees, triangles, or embedding leafs.</p>
  </remarks>
  <listRef>
    <ptr target="#GDAT" type="div2"/>
  </listRef>
</elementSpec>
