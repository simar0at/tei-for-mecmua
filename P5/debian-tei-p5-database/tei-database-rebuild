#!/bin/sh
# Rebuild TEI eXist database
# Sebastian Rahtz
# 2005-04-22
# License: GPL

X=/usr/share/xml/tei/xquery
S=/usr/share/xml/tei/odd

cd /tmp
perl $X/addtoexist.pl --remove=/db/TEI
perl $X/addtoexist.pl --remove=/db/system/config/db/TEI/index.xconf
perl $X/addtoexist.pl -c /db/system/config/db/TEI -s $X/index.xconf
xsltproc -o tei.xml $X/split.xsl  $S/Source/Guidelines/en/guidelines-en.xml
perl $X/addtoexist.pl -c /db/TEI -s tei.xml
perl $X/addtoexist.pl -c /db/TEI -s $X/teinames.xml 
perl $X/addtoexist.pl -c /db/TEI -s $X/datatypes.xml
rm tei.xml
