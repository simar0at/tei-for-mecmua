<moduleSpec xmlns="http://www.tei-c.org/ns/1.0" ident="spoken">
  <classSpec ident="att.duration" module="spoken">
  
  <desc>provides attributes for normalization of elements that contain datable events.</desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
  
  
  
  
  
</classSpec>
  <classSpec ident="model.global.spoken" module="spoken">
  <desc>groups  elements
which may appear globally within spoken texts.</desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
  
  
  
  
  
</classSpec>
  <classSpec ident="model.recordingPart" module="spoken">
  <desc>groups elements used to describe details of an audio or video recording.</desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
  
  
  
  
</classSpec>
  <elementSpec ident="scriptStmt" module="spoken">
  
  <gloss>script statement</gloss><gloss xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</gloss>
  
  
  
  
  
  
  <desc>contains a citation giving details of the script used for
a spoken text.</desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
  
  
  
  
  
  
  
  
  
  
</elementSpec>
  <elementSpec ident="recordingStmt" module="spoken">
  
  <gloss>recording statement</gloss><gloss xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</gloss>
  
  
  
  
  
  
  <desc>describes a set of recordings used as the basis for transcription of a
spoken text.</desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
  
  
  
  
  
  
  
  
  
  
</elementSpec>
  <elementSpec ident="recording" module="spoken">
  
  <gloss>recording event</gloss><gloss xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</gloss>
  
  
  
  
  
  
  <desc>details of an audio or video recording event
used as the source of a spoken text, either directly or from
a public broadcast. </desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
  
  
  
  
  
  
  
  
  <attList>
    <attDef ident="type" usage="opt">
      
      <desc>the kind of recording.</desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
      
      
      
      
      
      
      
      <valList type="closed">
        <valItem ident="audio">
          
          <desc>audio recording</desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
          
          
          
        </valItem>
        <valItem ident="video">
          
          <desc>audio and video recording</desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
          
          
          
        </valItem>
      </valList>
    </attDef>
  </attList>
  
  
  
  
</elementSpec>
  <elementSpec ident="equipment" module="spoken">
  
  
  <desc>provides technical details of the equipment and media used for
an audio or video recording used as the source for a spoken text.</desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
  
  
  
  
  
  
  
  
  
  
  
</elementSpec>
  <elementSpec ident="broadcast" module="spoken">
  
  
  <desc>describes a broadcast used as the source of a spoken text.</desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
  
  
  
  
  
  
  
  
  
  
</elementSpec>
  <elementSpec ident="u" module="spoken">
  
  <gloss>utterance</gloss><gloss xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</gloss>
  
  
  
  
  <desc>a stretch of speech usually preceded and followed by
silence or by a change of speaker.</desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
  
  
  
  
  
  
  <attList>
    <attDef ident="trans" usage="opt">
      <gloss>transition</gloss><gloss xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</gloss>
      
      <desc>indicates the nature of the transition between this utterance
          and the previous one.</desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
      
      
      
      
      
      <valList type="closed">
        <valItem ident="smooth">
          
          <desc>this  utterance begins without unusual pause or rapidity.</desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
          
          
        </valItem>
        <valItem ident="latching">
          
          <desc>this utterance begins with a markedly shorter pause than normal.</desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
          
          
        </valItem>
        <valItem ident="overlap">
          
          <desc>this utterance begins before the previous one has finished.</desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
          
          
        </valItem>
        <valItem ident="pause">
          
          <desc>this utterance begins after a noticeable pause.</desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
          
          
        </valItem>
      </valList>
    </attDef>
    
  </attList>
  
  
  
</elementSpec>
  <elementSpec xmlns:rng="http://relaxng.org/ns/structure/1.0" ident="pause" module="spoken">
  
  <gloss/><gloss xml:lang="pl" notBefore="2007-12-21"/>
  
  <desc>a pause either between or within utterances.</desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
  
  
  
  
  
  
  
  
</elementSpec>
  <elementSpec xmlns:rng="http://relaxng.org/ns/structure/1.0" ident="vocal" module="spoken">
  
  <desc>any vocalized but not necessarily lexical phenomenon, for
  example voiced pauses, non-lexical backchannels, etc.</desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
  
  
  
  
  
  
  <attList>
    <attDef ident="iterated" usage="opt">
      
      <desc>indicates whether or not the phenomenon is repeated.</desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
      
      
      
      
      
      
    </attDef>
  </attList>
  
  
</elementSpec>
  <elementSpec xmlns:rng="http://relaxng.org/ns/structure/1.0" ident="kinesic" module="spoken">
  <desc>any communicative phenomenon, not necessarily vocalized, for
  example a gesture, frown, etc.</desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
  
  
  
  
  
  
  <attList>
    <attDef ident="iterated" usage="opt">
      
      <desc>indicates whether or not the phenomenon is
      repeated.</desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
      
      
      
      
      
      
      
    </attDef>
  </attList>
  
  
</elementSpec>
  <elementSpec xmlns:rng="http://relaxng.org/ns/structure/1.0" ident="incident" module="spoken">
  <desc>any phenomenon or occurrence, not necessarily vocalized or
communicative, for example incidental noises or other events affecting
communication.</desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
  
  
  
  
  
  
  
  
</elementSpec>
  <elementSpec ident="writing" module="spoken">
  
  <desc>a passage of written text revealed to participants in the
  course of a spoken text.</desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
  
  
  
  
  
  
  <attList>
    <attDef ident="source" usage="opt">
      
      <desc>points to a bibliographic citation in the header giving
	a full description of the source or script of the
	writing.</desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
      
      
      
      <valDesc>Must be a valid identifier for a bibliographic element
      in the TEI header</valDesc><valDesc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</valDesc>
    </attDef>
    <attDef ident="gradual" usage="opt">
      
      <desc>indicates whether the writing is revealed all at once or
	gradually.</desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
      
      
      
      
      
      
    </attDef>
  </attList>
  
  
  
</elementSpec>
  <elementSpec ident="shift" module="spoken">
  
  <desc>marks the point at which some paralinguistic feature of a series of
utterances by any one speaker changes.</desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
  
  
  
  
  
  
  <attList>
    <attDef ident="feature" usage="opt">
      
      <desc>a
paralinguistic feature.</desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
      
      
      
      
      <valList type="closed">
        <valItem ident="tempo">
          
          <desc>speed of utterance.
    </desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
          
          
        </valItem>
        <valItem ident="loud">
          
          <desc>loudness.
    </desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
          
          
        </valItem>
        <valItem ident="pitch">
          
          <desc>pitch range.
    </desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
          
          
        </valItem>
        <valItem ident="tension">
          
          <desc>tension or stress pattern.
    </desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
          
          
        </valItem>
        <valItem ident="rhythm">
          
          <desc>rhythmic qualities.
    </desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
          
          
        </valItem>
        <valItem ident="voice">
          
          <desc>voice quality.
    </desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
          
          
        </valItem>
      </valList>
    </attDef>
    <attDef ident="new" usage="opt">
      
      <desc>specifies the new state of the paralinguistic feature specified.</desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
      
      
      
      
      
      
      <valDesc>An open list (for an example of possible values, see
      <ptr target="#TSSAPA"/>)</valDesc><valDesc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</valDesc>
      
    </attDef>
  </attList>
  
  
</elementSpec>
  <classSpec ident="model.divPart.spoken" module="spoken">
  <desc>groups elements
structurally analogous to paragraphs within spoken texts.</desc><desc xml:lang="pl" notBefore="2007-12-21">TO BE TRANSLATED</desc>
  
  
  
  
  
  
</classSpec>
</moduleSpec>
