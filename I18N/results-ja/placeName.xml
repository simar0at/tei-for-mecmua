<elementSpec xmlns="http://www.tei-c.org/ns/1.0" module="namesdates" xml:id="PLACNAME" usage="opt" ident="placeName">
  <equiv/>
  <!--gloss>place name</gloss-->
  <gloss version="2008-01-31" xml:lang="ja"></gloss>

  <desc version="2008-01-31" xml:lang="ja">
  絶対的，相対的場所名を示す．
  </desc>

  <classes>
    <!--    <memberOf key="model.placeStateLike"/>-->
    <memberOf key="model.placeNamePart"/>
    <memberOf key="att.naming"/>
    <memberOf key="att.typed"/>
    <memberOf key="att.datable"/>
    <memberOf key="att.editLike"/>
  </classes>
  <content>
    <rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="macro.phraseSeq"/>
  </content>
  <exemplum>
    <egXML xmlns="http://www.tei-c.org/ns/Examples">
      <placeName>
        <settlement>Rochester</settlement>
        <region>New York</region>
      </placeName>
    </egXML>
  </exemplum>
  <exemplum>
    <egXML xmlns="http://www.tei-c.org/ns/Examples">
      <placeName>
        <geogName>Arrochar Alps</geogName>
        <region>Argylshire</region>
      </placeName>
    </egXML>
  </exemplum>
  <exemplum>
    <egXML xmlns="http://www.tei-c.org/ns/Examples">
      <placeName>
        <measure>10 miles</measure>
        <offset>Northeast of</offset>
        <settlement>Attica</settlement>
      </placeName>
    </egXML>
  </exemplum>
  <listRef>
    <ptr target="#NDPLAC"/>
  </listRef>
</elementSpec>
