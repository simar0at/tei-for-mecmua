    <memberOf key="model.publicationStmtPart"/>
  </classes>
  <content>
    <rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="macro.phraseSeq.limited"/>
  </content>
  <exemplum>
    <egXML xmlns="http://www.tei-c.org/ns/Examples">
      <authority>John Smith</authority>
    </egXML>
  </exemplum>
  <listRef>
    <ptr target="#HD24"/>
  </listRef>
</elementSpec>
