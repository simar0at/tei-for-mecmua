                                             <m:mi>&#x3B2;</m:mi>
                                             <m:mrow>
                                                <m:mn>2</m:mn>
                                             </m:mrow>
                                          </m:msup>
                                          <m:mo>/</m:mo>
                                          <m:mn>2</m:mn>
                                       </m:mfenced>
                                    </m:msqrt>
                                 </m:mrow>
                              </m:mfrac>
                              <m:mo>exp</m:mo>
                              <m:mfenced close="]" open="[">
                                 <m:mfrac>
                                    <m:mrow>
                                       <m:msup>
                                          <m:mrow>
                                             <m:mo>(</m:mo>
                                             <m:mi>&#x3B5;</m:mi>
                                             <m:mo>-</m:mo>
                                             <m:munderover accent="true">
                                                <m:mo>&#xAF;</m:mo>
                                                <m:mi>&#x3B5;</m:mi>
                                                <m:mrow/>
                                             </m:munderover>
                                             <m:mo>)</m:mo>
                                          </m:mrow>
                                          <m:mrow>
                                             <m:mn>2</m:mn>
                                          </m:mrow>
                                       </m:msup>
                                    </m:mrow>
                                    <m:mrow>
                                       <m:mn>2</m:mn>
                                    </m:mrow>
                                 </m:mfrac>           
                                 <m:mfrac>
                                    <m:mrow>
                                       <m:mi>&#x3BA;</m:mi>
                                    </m:mrow>
                                    <m:mrow>
                                       <m:msup>
                                          <m:mi>&#x3BE;</m:mi>
                                          <m:mrow>
                                             <m:mn>2</m:mn>
                                          </m:mrow>
                                       </m:msup>
                                       <m:mrow>
                                          <m:mo>(</m:mo>
                                          <m:mn>1</m:mn>
                                          <m:mo>-</m:mo>
                                          <m:msup>
                                             <m:mi>&#x3B2;</m:mi>
                                             <m:mrow>
                                                <m:mn>2</m:mn>
                                             </m:mrow>
                                          </m:msup>
                                          <m:mo>/</m:mo>
                                          <m:mn>2</m:mn>
