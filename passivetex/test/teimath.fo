                                 </m:mrow>
                                 <m:mrow>
                                    <m:mi>&#x3BE;</m:mi>
                                    <m:msqrt>
                                       <m:mfrac>
                                          <m:mrow>
                                             <m:mn>2</m:mn>
                                             <m:mi>&#x3C0;</m:mi>
                                          </m:mrow>
                                          <m:mrow>
                                             <m:mi>&#x3BA;</m:mi>
                                          </m:mrow>
