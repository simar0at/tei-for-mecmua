                              <m:mo>=</m:mo>  
                              <m:mfrac>
                                 <m:mrow>
                                    <m:msup>
                                       <m:mi>&#x3BE;</m:mi>
                                       <m:mrow>
                                          <m:mn>2</m:mn>
                                       </m:mrow>
